{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Magali Découpe",
  "version": "0.2.1",
  "identifier": "com.damienschneider.magali-decoupe",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Magali Découpe - Circle Fitter",
        "width": 1000,
        "height": 700,
        "resizable": true,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "publisher": "Damien Schneider",
    "icon": [
      "../public/magali-decoupe-icons/web/icon-192.png",
      "../public/magali-decoupe-icons/web/icon-512.png",
      "../public/magali-decoupe-icons/web/icon-512.png",
      "../public/magali-decoupe-icons/ios/AppIcon@2x.png",
      "../public/magali-decoupe-icons/web/favicon.ico"
    ],
    "resources": [],
    "externalBin": [],
    "copyright": "© 2024 Damien Schneider. All rights reserved.",
    "category": "DeveloperTool",
    "shortDescription": "Advanced circle fitting tool for optimal material cutting",
    "longDescription": "Magali Découpe is a professional circle fitting application designed to help you calculate the optimal arrangement of circles on rectangular materials. Perfect for cutting circles from fabric, wood, metal, or any rectangular material while minimizing waste.",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  }
}
