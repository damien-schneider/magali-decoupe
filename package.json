{
  "name": "magali-decoupe",
  "private": true,
  "version": "0.2.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "build:all": "bun run build:macos && bun run build:windows",
    "build:macos": "bun run build:prepare && bun tauri build --bundles dmg && bun run build:organize",
    "build:windows": "bun run build:prepare && bun tauri build --runner cargo-xwin --target x86_64-pc-windows-msvc && bun run build:organize",
    "build:prepare": "rm -rf builds && mkdir -p builds",
    "build:organize": "node -e \"const fs=require('fs'); const path=require('path'); const copyDir=(src,dest)=>{if(fs.existsSync(src)){if(fs.existsSync(dest)){fs.rmSync(dest,{recursive:true,force:true});}fs.mkdirSync(dest,{recursive:true});fs.cpSync(src,dest,{recursive:true});}}; copyDir('src-tauri/target/release/bundle/dmg','builds/macos/dmg'); copyDir('src-tauri/target/release/bundle/macos','builds/macos/app'); copyDir('src-tauri/target/release/bundle/msi','builds/windows-msi'); copyDir('src-tauri/target/x86_64-pc-windows-msvc/release/bundle/nsis','builds/windows-nsis'); copyDir('src-tauri/target/x86_64-pc-windows-msvc/release/bundle/msi','builds/windows-msi'); copyDir('src-tauri/target/release/bundle/deb','builds/linux-deb'); copyDir('src-tauri/target/release/bundle/appimage','builds/linux-appimage');\"",
    "build:clean": "rm -rf builds && bun run build:prepare"
  },
  "dependencies": {
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@tailwindcss/vite": "^4.1.16",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-opener": "^2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.548.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.16",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.0",
    "@tauri-apps/cli": "^2",
    "@types/node": "^24.9.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/ui": "^4.0.6",
    "husky": "^9.1.7",
    "jsdom": "^27.1.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.8.3",
    "ultracite": "6.0.4",
    "vite": "^7.0.4",
    "vitest": "^4.0.6"
  }
}
